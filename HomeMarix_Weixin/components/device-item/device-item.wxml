<view class="device">
  <view class="row">
    <text>{{device.name}} ({{device.type}})</text>
    <switch checked="{{device.state}}" bindchange="onToggle"/>
  </view>
  <view class="meta">
    <text>状态: {{device.state ? '开' : '关'}}</text>
    <block wx:if="{{device.meta && device.meta.temp}}">
      <text> 温度: {{device.meta.temp}}°C</text>
    </block>
  </view>
</view>