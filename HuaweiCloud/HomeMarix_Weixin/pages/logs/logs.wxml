<view class="container">
  <text class="title">设备列表</text>
  <block wx:for="{{devices}}" wx:key="id">
    <view class="device">
      <text>{{item.name}} - 状态: {{item.state}}</text>
      <button bindtap="onToggle" data-id="{{item.id}}">
        {{item.state === 'on' ? '关闭' : '开启'}}
      </button>
      <button bindtap="onSetMeta" data-id="{{item.id}}">设置参数</button>
    </view>
  </block>
</view>
